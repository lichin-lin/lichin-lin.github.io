light-yellow = #FFE682

light-orange = #FC7358
ghost-orange = #FCCCC2

light-green = #13aa7f
tea-grean = #A1B585
ghost-green = #e4f7f2

sky-blue = #3e94ec;

@import url(/assets/font/Fenton-Medium.otf);
html, body
  //background-color #eee
  background linear-gradient(to right,#06AED5 0%, #FFF1D0 50%, rgba(255, 128, 128, 0.65) 80%)
  font-family 'raleway', sans-serif
  margin 0

@font-face
  font-family 'Fenton-Medium'
  src url('/assets/font/Fenton-Medium.otf')
  src url('/assets/font/Fenton-Medium.otf') format('embedded-opentype'), 
       url('/assets/font/Fenton-Medium.otf') format('woff2'), 
       url('/assets/font/Fenton-Medium.otf') format('woff'), 
       url('/assets/font/Fenton-Medium.otf')  format('truetype'), 
       url('/assets/font/Fenton-Medium.otf') format('svg')

h1,h3,span
  font-family 'Fenton-Medium', sans-serif

body
  padding-top 40px

code
  font-size 14px

.row
  margin 0 auto
  & > [class*="span"]
    margin-left 10px
  li
    font-size 1.3em
    padding 3px 0 3px 0
    line-height 150%
  pre
    //width 90%
  .span14
    width 95%
    .paragraph-seperate
      position relative
      width 50px
      height 50px
      margin 0 auto
      &:before
        position absolute
        content ""
        width 5px
        height 35px
        top calc(50% - 17px)
        left calc(50% - 2.5px)
        background-color #81C1B7
        transform rotate(60deg)
      &:after
        position absolute
        content ""
        width 5px
        height 35px
        top calc(50% - 17px)
        left calc(50% - 2.5px)
        background-color #81C1B7
        transform rotate(-60deg)

.container
  position relative
  top 50px
  //width 820px
  & > footer
    p
      text-align center

.content
  background-color #fff
  padding 20px
  margin 25px -20px 0 -20px
  -webkit-border-radius 6px 6px 6px 6px
  -moz-border-radius 6px 6px 6px 6px
  border-radius 6px 6px 6px 6px
  -webkit-box-shadow 0 1px 2px rgba(0,0,0,.15)
  -moz-box-shadow 0 1px 2px rgba(0,0,0,.15)
  box-shadow 0 1px 2px rgba(0,0,0,.15)
  p
    font-size 1.2em

.page-header
  background-color #f5f5f5
  padding 20px 20px 10px
  margin 10px -20px 20px
  h1
    font-size 2.5em
  span
    padding-left 5px
    font-size 1.2em

.topbar
  width 100%
  height 70px
  background-color transparent
  .fill
    width 100%
    height 70px
    background-color light-yellow
    background-image none
    -webkit-transition all 0.4s ease
    transition all 0.4s ease
    &.shrink
      background-color rgba(255,254,255,.6)
      height 50px
      -webkit-transition all 0.4s ease
      transition all 0.4s ease
      img
        width 40px
        height 40px
  .brand
    font-size 2em
    color #373836
    padding 0px 0px 5px
    margin-left 50px
    box-shadow 0
    transition all .3s ease
    &:hover
      color white
      transition all .3s ease
      background-color transparent
      text-decoration none
      outline none
    span
      line-height 80px
      padding-left 5px
  .btn
    border 0
  a
    text-shadow none
  ul
    li
      a
        color #6B6B6B
  div
    & > ul
      .active
        & > a
          background-color #50514F
  img
    display inline-block
    width 60px
    height 60px
    float left
    margin-top 5px
    transition all .25s ease

.topbar div>ul, .nav
  margin 10px 0px 0px 5px

.topbar div>ul>li, .nav>li
  font-size 1.3em
  margin-top 10px
  padding-left 5px

.topbar div>ul .active>a, .nav .active>a, a:hover,.nav a:hover
  border-radius 5px

.topbar div>ul a:hover,.nav a:hover
  background-color rgba(80,81,79,.4)
  transition all .3s ease

.tag_box
  list-style none
  margin 0
  padding 5px 0
  overflow hidden
  li
    line-height 28px
  &.inline
    li
      float left
  a
    padding 3px 6px
    margin 2px
    background #eee
    color #005F6B
    border-radius 3px
    text-decoration none
    font-size 1.2em
    span
      vertical-align super
      font-size 0.8em
    &.active
      background #57A957
      border 1px solid #4C964D
      color #FFF

.row .span14 h2,.row .span10 h2
  font-size 1.65em

.row .span14 h3,.row .span10 h3
  font-size 1.5em

blockquote
  p
    width 80%

.posts
  list-style none
  padding-bottom 50px
  & > li
    margin-top 20px
    min-height 80px
    border-bottom 1px solid #E3E3E3
  a
    text-decoration none
  li
    display flex
    justify-content center
    section
      display flex
      flex-direction column
      align-items center
      padding-top 25px
  .tags
    margin-left 0
    padding-bottom 5px
    li
      margin-right 10px
      padding 3px 7px 3px 7px
      font-size .8em
      position relative
      border-radius 5px
      display inline-block
      background-color light-yellow
      a
        color #50514f
    span
      font-size .9em
      font-style italic
    .tag
      &:after
        content " "
        display block
        width 0
        height 0
        border-top 7px solid transparent
        border-bottom 7px solid transparent
        border-left 8px solid light-yellow
        position absolute
        right -7px
        top 6.5px

.post-info
  margin 0 0 20px 0
  a
    color #50514f
    font-size 1.6em
    transition all .3s ease
    &:hover
      color #34ABC9
      transition all .3s ease

#disqus_thread

#dsq-app5
  display none


.about-tabs
  width 95%
  text-align center
  font-weight 300
  font-style normal
  label
    text-align center
  .tabs-state
    display none
  .flex-tabs
    display -webkit-box
    display -ms-flexbox
    display -webkit-flex
    display flex
    -webkit-box-pack justify
    -webkit-justify-content space-between
    -ms-flex-pack justify
    justify-content space-between
    .about-tab
      -webkit-box-flex 1
      -webkit-flex-grow 1
      -ms-flex-positive 1
      flex-grow 1
  .about-tab
    padding 20px 10px
    background-color white
    color #999cab
    font-size 16px
    cursor pointer
    border-bottom 1px solid #e5e6ea
    font-weight 400
    z-index 1

.panel-content
  .panel
    margin-top -6px
    padding-top 20px
    padding-left 20px
    border 1px solid #e5e6ea
    display none

.panel
  &:first-of-type
    padding-left 0
  &:last-of-type
    padding-bottom 20px

table
  font-family 'Lato', sans-serif
  color #999cab
  width 100%
  th
    letter-spacing 1px
    white-space normal
    font-size .7em
    text-transform uppercase
    background #FFF
    line-height 1.125rem
    vertical-align middle
    padding 0.5rem 0.625rem 0.625rem
  tbody
    tr
      &:nth-child(odd)
        background-color #FCD6CF
  tr
    td
      font-size .8rem
      display table-cell
      line-height 1.125rem
      vertical-align middle
      padding 0.7rem 0.625rem 0.625rem

.tab-notce
  color #13aa7f
  cursor default
  border-top 1px solid #e5e6ea
  border-right 1px solid #e5e6ea
  border-bottom 1px solid #fff
  border-left 1px solid #e5e6ea

.tab-active
  display block



@media(max-width:768px)
  .page-header
    h1
      font-size 2.3em
  .topbar
    .brand
      font-size 1.5em
      margin-left 20px
    img
      padding-left 10px
    .nav
      display none
  .row
    ul
      margin 0 0 10px 25px
    .post-info
      margin 0 0 20px 0
  blockquote
    p
      width 100%
  .posts
    a
      font-size 1.2em
      text-decoration none
    .tags
      span
        font-size .8em
