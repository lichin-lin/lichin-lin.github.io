@font-face
    font-family 'Brandon'
    src url('Brandon_blk.otf')
    src url('Brandon_blk.otf') format('embedded-opentype'),
        url('Brandon_blk.otf') format('woff2'),
        url('Brandon_blk.otf') format('woff'),
        url('Brandon_blk.otf')  format('truetype'),
        url('Brandon_blk.otf') format('svg')
    font-weight: bold

@font-face
    font-family 'Brandon'
    src url('Brandon_med.otf')
    src url('Brandon_med.otf') format('embedded-opentype'),
        url('Brandon_med.otf') format('woff2'),
        url('Brandon_med.otf') format('woff'),
        url('Brandon_med.otf')  format('truetype'),
        url('Brandon_med.otf') format('svg')
    font-weight: normal

@font-face
    font-family 'Brandon'
    src url('Brandon_light.otf')
    src url('Brandon_light.otf') format('embedded-opentype'),
        url('Brandon_light.otf') format('woff2'),
        url('Brandon_light.otf') format('woff'),
        url('Brandon_light.otf')  format('truetype'),
        url('Brandon_light.otf') format('svg')
    font-weight: lighter

flexStyle(a, b, c)
    display: flex
    flex-direction: a
    justify-content: b
    align-items: c

*
    padding: 0
    margin: 0
    font-family: 'Brandon', cursive;
    transition: all 0.3s ease
body
    width: 100%
    height: 100%
    .intro
        width: 100vw
        height: 100vh
        min-height: 500px
        flexStyle(column, flex-start, center)
        background: linear-gradient(135deg, lighten($blue, 10%), darken($blue,10%))

        .info
            // border: 1px solid pink
            margin: 150px 0 0 0;
            flexStyle(row, flex-start, center)
            .fox
                margin-left: 5%
                width: 50%
                img
                    width: 120%
                    height: auto
            .signbox
                width: 50%
                margin-right: 5%
                flexStyle(column, center, flex-start)
                .welcome
                    // border: 1px solid pink
                    margin-left: 15px
                    flexStyle(column, flex-start, flex-start)
                    span
                        color: white
                        font-size: 2.5em
                        font-weight: bold
                        letter-spacing: 2px
                        margin: 10px 0
                .signup
                    margin: 10px 0 0 15px
        @media screen and (max-width: 768px)
            flexStyle(column, center, center)
            .info
                .fox
                    display: none
                .signbox
                    width: 100%
                    .signup
                        margin: 10px 0 0 15px
    >div.section
        width: auto
        height: auto
        // margin-top: 100px
        padding: 50px 0
        min-height: 400px
        flexStyle(column, flex-start, center)
        .info
            text-align: center
            color: $black
            position: relative
            font-size: $Lato_title_size
            font-weight: bold
            letter-spacing: 5px
            .subtitle
                margin-top: 20px
                color: $black
                position: relative
                font-size: $Lato_subtitle_size
                font-weight: normal;
                font-family: "Lato"
                letter-spacing: 3px
                span
                    position: absolute
                    content: ''
                    left: calc(50% - 100px)
                    top: -20px
                    width: 200px
                    height: 8px
                    background: $orange
        .sectionContent
            width: auto
            height: auto
            margin-top: 50px
            // border: 1px solid pink
        &.reverse
            background: $blue
            .info
                color: $white
                .subtitle
                    color: $white
        @media screen and (max-width: 768px)
            padding: 50px 25px
    .Upcoming
        .sectionContent
            flexStyle(row, flex-start, center)
            padding: 0 50px
            .mention,
            .fox
                width: 50%
                height: auto
            .mention
                flexStyle(column, space-around, center)
                .FutureContent
                    width: 80%
                    color: $black
                    text-align: center
                    font-family: "Lato"
                    font-size: $Brandon_subtitle_size
                .FutureFeature
                    span
                        margin: 0 10px
                        color: $black
                        font-family: "Lato"
                        font-weight: bold
                        font-size: $Lato_subtitle_size
                .FutureBtn
                    margin: 0
                >div
                    margin-bottom: 30px
            .fox
                flexStyle(row, center, center)
                img
                    width: 60%
                    height: auto
            @media screen and (max-width:768px)
                flex-direction: column-reverse
                padding: 0 25px
                .mention,
                .fox
                    width: 100%
                    margin-bottom: 30px
                    height: auto
            @media screen and (max-width:480px)
                .mention
                    .FutureFeature
                        span
                            margin: 0 5px
                            font-size: 16px
