.menu
    position: fixed
    z-index: 9999
    width: 100%
    height: auto
    padding: 15px 0
    flexStyle(row, space-between, center)
    transition: all 0.3s ease
    border-bottom: 2px solid transparent
    .title
        color: white
        font-size: 2em
        font-weight: bold
        letter-spacing: 2px
        cursor: pointer
        margin-left: 50px
    .nav
        margin-right: 50px
        flexStyle(row, space-around, center)
        .language
            width: 30px
            height: 30px
            color: white
            font-size: 0.9em
            font-weight: bold
            border: 2px solid white
            border-radius: 3px
            position: relative
            flexStyle(row, center, center)
            transform: translateX(-10px);
            &::after
                position: absolute
                content: ''
                width: 2px
                height: 20px
                background: white
                top 5px
                left: 40px
        ul
            flexStyle(row, space-around, center)
            li
                font-family: 'Raleway'
                color white
                margin: 0 0 0 20px
                font-size: 1em
                font-weight: bold
                letter-spacing: 1px
                cursor: pointer
                list-style: none
    &.active
        background: #FFF
        border-color: $black
        .title
            color: $black
        .nav
            .language
                color: $black
                border-color: $black
                &::after
                    background: $black
            ul
                li
                    color: $black

    @media screen and (max-width:768px)
        flexStyle(row, center, center)
        .title
            margin-left: 0
        .nav
            display: none
.orangeBtn
    width: inherit
    max-width: 500px
    height: auto
    display: block
    color: white
    padding: 7.5px 0px
    margin: 0
    font-size: 1.25em
    font-weight: bold
    letter-spacing: 1.75px
    cursor: pointer
    background: linear-gradient(135deg, #EBDB3A, #F7942D)
    // border: 1px solid transparent
    border-radius: 5px
    flexStyle(row, center, center)
    a
        text-decoration: none
        color: $white
        p
            color: $white

svg path
    fill: $gray
